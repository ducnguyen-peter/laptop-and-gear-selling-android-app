<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_item_small"
        android:layout_width="220dp"
        android:layout_height="148dp"
        android:contentDescription="@string/item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/lbl_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_item_small"
        app:layout_constraintStart_toStartOf="@+id/img_item_small"
        app:layout_constraintTop_toBottomOf="@+id/img_item_small" />

    <TextView
        android:id="@+id/lbl_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/lbl_item_name"
        app:layout_constraintStart_toStartOf="@+id/lbl_item_name"
        app:layout_constraintTop_toBottomOf="@+id/lbl_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>